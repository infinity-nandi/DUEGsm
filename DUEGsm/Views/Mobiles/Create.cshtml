            <label asp-for="BackCamera" class="color"></label>
            <input asp-for="BackCamera" class="inputForm" />
                    <span asp-validation-for="BackCamera" class="text-danger"></span>

            <label asp-for="Stroage" class="color"></label>
            <input asp-for="Stroage" class="inputForm" />
                    <span asp-validation-for="Stroage" class="text-danger"></span>

            <label asp-for="Description" class="color"></label>
            <input asp-for="Description" class="inputForm" />
                    <span asp-validation-for="Description" class="text-danger"></span>

            <label asp-for="UploadDate" class="color"></label>
            <input asp-for="UploadDate" class="inputForm" />
                    <span asp-validation-for="UploadDate" class="text-danger"></span>

            <input type="submit" value="Hozzáadás" class="LogInbutton" />
                </div>
        <div>
            <a class="Back" asp-action="Index">Vissza</a>
        </div>
        <div class="spacing"></div>
            </form>
    <div>
        
    </div>
