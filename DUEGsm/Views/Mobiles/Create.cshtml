            <input asp-for="Color" class="inputForm" />
                    <span asp-validation-for="Color" class="text-danger"></span>

            <label asp-for="OperatingSystem" class="color"></label>
            <input asp-for="OperatingSystem" class="inputForm" />
                    <span asp-validation-for="OperatingSystem" class="text-danger"></span>

            <label asp-for="Screen" class="color"></label>
            <input asp-for="Screen" class="inputForm" />
                    <span asp-validation-for="Screen" class="text-danger"></span>

            <label asp-for="Processor" class="color"></label>
            <input asp-for="Processor" class="inputForm" />
                    <span asp-validation-for="Processor" class="text-danger"></span>

