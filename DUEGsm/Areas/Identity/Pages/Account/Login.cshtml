@page
@model LoginModel

@{
    ViewData["Title"] = "Bejelentkezés";
}
<link rel="stylesheet" href="~/css/LoginIndex.css" asp-append-version="true" />
<script src="~/js/ColorInput.js" type="text/javascript" asp-append-version="true"></script>

<body class="bg">
    @* <div class="col-md-4"> *@
            <form id="account" method="post" class="loginForm">
                <div class="flex">
                    <div class="login color">Bejelentkezés</div>
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                    <label asp-for="Input.Email" class="color"></label>
                    <input asp-for="Input.Email" class="inputForm" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                    <label asp-for="Input.Password" class="color"></label>
                    <input asp-for="Input.Password" class="inputForm" autocomplete="current-password" aria-required="true" />                
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <button id="login-submit" type="submit" class="LogInbutton"> Bejelentkezés</button>
                <div>
                    <div class="align">
                        <label asp-for="Input.RememberMe" class="cyberpunk-checkbox-label">
                            @* <input type="checkbox" class="form-check-input" asp-for="Input.RememberMe" /> *@
                            <input type="checkbox" class="cyberpunk-checkbox" asp-for="Input.RememberMe" />
                            Felhasználói adatok megjegyzése?
                        </label>
                    </div>
                </div>
                <div>    
                   <div class="color align">
                        <a class="unset" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nincs még fiókja? Regisztráljon</a><br>
                        <a class="unset" id="forgot-password" asp-page="./ForgotPassword">Elfelejtette a jelszavát?</a><br>
                        <a class="unset" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Megerősítő email újra küldése!</a><br>
                   </div>
                </div>
                </div>
            </form>
    @* </div> *@
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
