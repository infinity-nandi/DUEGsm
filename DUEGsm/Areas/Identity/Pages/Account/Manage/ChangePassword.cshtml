@page
@model ChangePasswordModel

<link rel="stylesheet" href="~/css/Manage.css" asp-append-version="true" />
<script src="~/js/ColorInput.js" type="text/javascript" asp-append-version="true"></script>

@{
    ViewData["Title"] = "Jelszó változtatás";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />

<form id="change-password-form" method="post" class="ManageForm">
    <div class="flexPassword">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="Input.OldPassword" class="color">Jelenlegi jelszó</label>
        <input asp-for="Input.OldPassword" class="inputForm" autocomplete="current-password" aria-required="true" />
        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>

        <label asp-for="Input.NewPassword" class="color">Új jelszó</label>
        <input asp-for="Input.NewPassword" class="inputForm" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>

        <label asp-for="Input.ConfirmPassword" class="color">Új jelszó újra</label>
        <input asp-for="Input.ConfirmPassword" class="inputForm" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

        <button type="submit" class="Savebttn">Jelszó változtatás</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
